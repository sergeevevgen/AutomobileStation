@using AutoFixStationContracts.ViewModels
@model WorkTypeViewModel
@{
    ViewData["Title"] = "WorkInfo";
}
<div class="text-center">
    <h3 class="display-4">Услуга</h3>
</div>

<div class="text-center">
    @{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер услуги
                </th>
                <th>
                    Название
                </th>
                <th>
                    Стоимость работы
                </th>
                <th>
                    Стоимость с учётом запчастей
                </th>
                <th>
                    Статус
                </th>
                <th>
                    Дата начала
                </th>
                <th>
                    Количество
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                        Model.WorkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                        Model.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.NetPrice)
                </td>
                <td>
                    @ViewBag.Status
                </td>
                <td>
                    @ViewBag.WorkBegin
                </td>
                <td>
                    @ViewBag.Count
                </td>
            </tr>
         </tbody>
    </table>
    <div class="text-center">
        <h4 class="display-4">Запчасти</h4>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Название
                </th>
                <th>
                    Количество
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.WorkSpareParts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>
                            item.Value.Item1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item2)
                    </td>
                </tr>
            }
         </tbody>
    </table>
    }
</div>