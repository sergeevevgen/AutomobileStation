@{
    ViewData["Title"] = "AddClient";
}
<div class="text-center">
    <h2 class="display-4">Добавление клиента</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Марка:</div>
        <div class="col-8"><input type="text" name="brand" id="brand" /></div>
    </div>
    <div class="row">
        <div class="col-4">Модель:</div>
        <div class="col-8"><input type="text" name="model" id="model" /></div>
    </div>
    <div class="row">
        <div class="col-4">VIN:</div>
        <div class="col-8"><input type="text" name="VIN" id="VIN" /></div>
    </div>
    <div class="row">
        <div class="col-4">Номер телефона владельца:</div>
        <div class="col-8"><input type="tel" name="number" id="number" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Добавить" class="btn btnprimary" /></div>
    </div>
</form>