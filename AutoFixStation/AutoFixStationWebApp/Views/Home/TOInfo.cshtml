@using AutoFixStationContracts.ViewModels
@model TOViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">ТО</h1>
</div>

<div class="text-center">
    @{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Номер автомобиля
                </th>
                <th>
                    Статус
                </th>
                <th>
                    Дата создания
                </th>
                <th>
                    Дата начала
                </th>
                <th>
                    Дата окончания
                </th>
                <th>
                    Сумма
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                        Model.CarId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                        Model.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.DateCreate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.DateImplement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.DateOver)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Sum)
                </td>
            </tr>
         </tbody>
    </table>
    <div class="text-center">
        <h1 class="display-4">Услуги</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер
                </th>
                <th>
                    Название
                </th>
                <th>
                    Количество
                </th>
                <th>
                    Стоимость
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Works)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>
                            item.Value.Item1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item2.Item1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Item2.Item2)
                    </td>
                </tr>
            }
         </tbody>
    </table>
    }
</div>