@using AutoFixStationContracts.ViewModels
@model ServiceRecordViewModel
@{
    ViewData["Title"] = "Изменение записи #" + Model.Id;
}
<div class="text-center">
    <h3 class="display-4">Изменение записи сервиса у авто "@Model.CarBrandAndName"</h3>
</div>
<div class="row">
    <div class="col-4">Дата начала:</div>
    <div class="col-8"><input type="text" name="dateb" id="dateb" value="@Model.DateBegin" readonly/></div>
</div>
<div class="row">
    <div class="col-4">Дата окончания:</div>
    <div class="col-8"><input type="text" name="datee" id="datee" value="@Model.DateEnd" readonly/></div>
</div>
<form method="post">
    <div class="row">
        <div class="col-8"><input type="text" name="recordId" id="recordId" hidden="true" value="@Model.Id"/></div>
    </div>
    <div class="row">
        <div class="col-4">Описание:</div>
        <div class="col-8"><textarea cols="60" rows="10" name="description" id="description">@Model.Description</textarea>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btnprimary" /></div>
    </div>
</form>