@using AutoFixStationContracts.ViewModels
@model WorkTypeViewModel
@{
    ViewData["Title"] = "AddSparePartToWorkType";
}
<div class="text-center">
    <h3 class="display-4">Добавление требующихся запчастей</h3>
</div>
<form method="post">
    <div class="row">
        <div class="col-8"><input type="text" name="worktypeId" id="worktypeId" hidden="true" value="@Model.Id"/></div>
    </div>
    <div class="row">
        <div class="col-4">Запчасти</div>
        <div class="col-8">
            <select id="sparepartId" name="sparepartId" class="form-control" asp-items="@(new SelectList(@ViewBag.SpareParts, "Id", "Name"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8"><input type="text" name="count" id="count"/></div>
    </div>
    <div class="row">
        <div class="col-4">Стоимость услуги:</div>
        <div class="col-8"><input type="text" name="price" id="price" value="@Model.Price" readonly="true"/></div>
    </div>
    <div class="row">
        <div class="col-4">Цена с учётом запчастей:</div>
        <div class="col-8"><input type="text" name="netprice" id="netprice" readonly="true" value="@Model.NetPrice"/></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Добавить" class="btn btnprimary"/></div>
    </div>
</form>

<script>
    $('#sparepartId').on('change', function () {
        check();
    });
    $('#count').on('change', function () {
        check();
    });

    function check() {
        var count = $('#count').val();
        var partId = $('#sparepartId').val();
        var worktypeId = $('#worktypeId').val();
        if (count && partId && worktypeId) {
            $.ajax({
                method: "POST",
                url: "/Home/CalcForExist",
                data: { count: count, partId: partId, worktypeId: worktypeId },
                success: function (result) {
                            $("#netprice").val(result);
                         }
            });
        };
    }
</script>